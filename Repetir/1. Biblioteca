Algoritmo Bbiblioteca
	//Definir variables
	Definir titulo, autor, N_paginas, acumulador Como Cadena;
	Definir datos_opcion Como Entero;
	
	acumulador <- ""   //inicializar vacío
	
	Repetir
		Escribir "Elige una opcion: ";
		Escribir "1. Registrar libro";
		Escribir "2. Imprimir libros";
		Escribir "3. Salir del programa";
		Leer datos_opcion;
		
		Segun datos_opcion Hacer
			1:
				Escribir "Por favor ingrese el titulo del libro: ";
				Leer titulo;
				
				Escribir "Por favor ingrese el nombre del autor: ";
				Leer autor;
				
				Escribir "Por favor ingrese el numero de paginas: ";
				Leer N_paginas;
				
				//Guardar en el acumulador
				acumulador <- acumulador + "Titulo: " + titulo + ", Autor: " + autor + ", Paginas: " + N_paginas + "  ================  ";
				
			2:
				Escribir "Libros registrados: ";
				Escribir acumulador;
				
			3:
				Escribir "Saliendo del programa...";
				
			De Otro Modo:
				Escribir "Opcion no valida. Por favor ingrese una opcion valida (1-3)";
		Fin Segun
	Hasta Que datos_opcion = 3
FinAlgoritmo
